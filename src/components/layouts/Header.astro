export interface Props {
	right?: Record<string, string>
	left?: Record<string, string>
}
---

<header class="p-8 z-20 absolute w-full">
	<nav class="items-center">
		<div class="hidden justify-between w-11/12 fixed lg:flex">
			<a href="/">
				<img src="src/assets/images/logo.svg">
			</a>
			<div class="bg-white rounded-full items-center h-fit justify-center shadow-lg flex">
				<a class="pl-4 pr-0 mx-2 text-orange-600" href="/">ALLDAYS</a>
				<a class="border-l-2 border-orange-300 pl-4 mx-2 pr-0 text-orange-600" href="/">Compétitions</a>
				<a class="border-l-2 border-orange-300 pl-4 mx-2 pr-0 text-orange-600" href="/">Esthetique</a>
				<a class="border-l-2 border-orange-300 pl-4 mx-2 pr-0 text-orange-600" href="/">Cycle</a>
				<a class="border-l-2 border-orange-300 pl-4 mx-2 pr-0 text-orange-600" href="/">Equipement</a>
				<a class="border-l-2 border-orange-300 pl-4 mx-2 pr-0 text-orange-600" href="/">Produit / Outillage</a>
				<a class="rounded-full bg-amber-600 flex py-3 px-6 gap-3 text-white shadow-2xl acc" href="/">Accueil <House /></a>
			</div>
		</div>
		<div class="flex justify-between lg:hidden">
			<a href="/">
				<img src="src/assets/images/logo.svg">
			</a>
			<div class="flex flex-col items-center bg-white rounded-full pt-3 justify-center mobile">
				<a class="mx-2 text-orange-600 flex pt-2 cursor-pointer" href="/" title="ALLDAYS"><Gauge /></a>
				<a class="mx-2 pr-0 text-orange-600 flex pt-2 cursor-pointer" href="/lautre" title="Compétitions"><Trophy /></a>
				<a class="mx-2 pr-0 text-orange-600 flex pt-2 cursor-pointer" href="/" title="Esthetique"><Paintbrush /></a>
				<a class="mx-2 pr-0 text-orange-600 flex pt-2 cursor-pointer" href="/" title="Cycle"><Bike /></a>
				<a class="mx-2 pr-0 text-orange-600 flex pt-2 cursor-pointer" href="/" title="Equipement"><HardHat /></a>
				<a class="mx-2 pr-0 text-orange-600 flex pt-2 cursor-pointer pb-2" href="/" title="Produit / Outillage"><Wrench /></a>
				<a class="mx-4 py-3 bg-amber-600 text-white flex rounded-b-full w-full justify-center cursor-pointer" href="/"  title="Accueil"><House /></a>
			</div>
		</div>
	</nav>
</header>
						